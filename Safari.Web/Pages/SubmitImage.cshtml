@page
@model Safari.Web.Pages.ImagesModel

@{
    ViewData["Title"] = "Images";
}

<h1>Submit an Image</h1>

<h4>Choose an animal from the database, and upload an image. 
    If you found the image from another website, please include the link in the "source"
    so that we can verify whether we're allowed to post it on our site.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AnimalPic.AnimalId" class="control-label"></label>
                <select asp-for="AnimalPic.AnimalId" class ="form-control" asp-items="ViewBag.AnimalId"></select>
            </div>
            <div class="form-group">
                <label asp-for="AnimalPic.FileName" class="control-label"></label>
                <input asp-for="AnimalPic.FileName" class="form-control" />
                <span asp-validation-for="AnimalPic.FileName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnimalPic.FilePath" class="control-label"></label>
                <input asp-for="AnimalPic.FilePath" class="form-control" />
                <span asp-validation-for="AnimalPic.FilePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnimalPic.AltText" class="control-label"></label>
                <input asp-for="AnimalPic.AltText" class="form-control" />
                <span asp-validation-for="AnimalPic.AltText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnimalPic.Source" class="control-label"></label>
                <input asp-for="AnimalPic.Source" class="form-control" />
                <span asp-validation-for="AnimalPic.Source" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
